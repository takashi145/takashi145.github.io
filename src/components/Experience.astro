---
const experiences = [
  {
    period: "2024 - 現在",
    title: "プログラマー",
    description: "",
  },
  {
    period: "2020 - 2023",
    title: "学生",
    description: "",
  },
];
---

<div class="max-w-3xl mx-auto px-4 md:px-8">
  <h2
    class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center"
  >
    Experience
  </h2>
  <div class="relative">
    <div class="absolute left-1.5 h-full w-0.5 bg-gray-300 dark:bg-gray-700">
    </div>

    <div class="space-y-6">
      {
        experiences.map((exp, index) => (
          <div class={`relative`}>
            <div class="relative pl-8">
              <div class="absolute left-0 top-2 w-4 h-4 bg-purple-500 dark:bg-purple-400 rounded-full border-2 border-white dark:border-gray-900" />
              <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
                <time class="text-sm font-semibold text-purple-500 dark:text-purple-400">
                  {exp.period}
                </time>
                <h3 class="text-base font-bold text-gray-900 dark:text-white mt-2 mb-2">
                  {exp.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm">
                  {exp.description}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
