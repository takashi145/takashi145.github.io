---
const experiences = [
  {
    period: "2024 - 現在",
    title: "プログラマー",
    company: "",
    description: "",
  },
  {
    period: "2020 - 2023",
    title: "学生",
    company: "",
    description: "",
  },
];
---

<section id="experience" class="min-h-screen py-20 bg-transparent">
  <div class="w-full">
    <h2 class="text-4xl font-bold mb-12 text-gray-900 dark:text-white">
      Experience
    </h2>
    <div class="max-w-3xl mx-auto">
      <div class="relative pl-8">
        {/* 全体を貫く縦線 */}
        <div
          class="absolute left-[5px] top-[4px] bottom-0 w-[2px] bg-purple-500 dark:bg-purple-400"
        >
        </div>

        {
          experiences.map((exp) => (
            <div class="relative pb-8 last:pb-0">
              {/* ドット */}
              <div class="absolute -left-8 top-[4px] w-3 h-3 rounded-full bg-purple-500 dark:bg-purple-400" />
              <p class="text-gray-600 dark:text-gray-400 mb-1">{exp.period}</p>
              <div class="pl-5 py-3 bg-white dark:bg-gray-800 shadow rounded border-2 border-gray-200 dark:border-gray-700 hover:border-purple-500 dark:hover:border-purple-400 transition-colors duration-200">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
                  {exp.title}
                </h3>
                <p class="text-purple-500 dark:text-purple-400 mb-2">
                  {exp.company}
                </p>
                <p class="text-gray-700 dark:text-gray-300">
                  {exp.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
