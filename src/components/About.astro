---
const experiences = [
  {
    period: "2024 - 現在",
    title: "プログラマー",
    company: "",
    description: "",
  },
  {
    period: "2020 - 2023",
    title: "学生",
    company: "",
    description: "",
  },
];

const skillCategories = [
  {
    category: "Frontend",
    skills: ["HTML", "CSS", "React", "TypeScript"],
  },
  {
    category: "Backend",
    skills: ["PHP", "Laravel", "MySQL"],
  },
  {
    category: "Tools",
    skills: ["Git", "Docker", "VS Code"],
  },
];

const certifications = [
  {
    name: "ITパスポート試験",
    date: "2018年",
  },
  {
    name: "基本情報技術者試験",
    date: "2021年",
  },
];
---

<section id="about" class="min-h-screen py-20 bg-transparent">
  <div class="w-full">
    <h2 class="text-4xl font-bold mb-12 text-gray-900 dark:text-white">
      About Me
    </h2>

    <!-- Skills Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">
        Skills
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        {
          skillCategories.map((category) => (
            <div class="bg-white dark:bg-transparent border-2 border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:border-purple-500 dark:hover:border-purple-400 transition-colors duration-200 shadow-sm">
              <h3 class="text-xl font-semibold mb-4 text-purple-500 dark:text-purple-400">
                {category.category}
              </h3>
              <div class="flex flex-wrap gap-2">
                {category.skills.map((skill) => (
                  <span class="px-3 py-1.5 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-300 text-sm rounded-md hover:bg-purple-100 dark:hover:bg-purple-900/30 hover:text-purple-600 dark:hover:text-purple-400 transition-colors duration-200">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Certifications Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">
        Certifications
      </h2>
      <div class="grid md:grid-cols-2 gap-6">
        {
          certifications.map((cert) => (
            <div class="bg-white dark:bg-transparent border-2 border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:border-purple-500 dark:hover:border-purple-400 transition-colors duration-200 shadow-sm">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                {cert.name}
              </h3>
              <p class="text-sm text-purple-500 dark:text-purple-400">
                取得日: {cert.date}
              </p>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Experience Section -->
    <section>
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">
        Experience
      </h2>
      <div class="max-w-3xl mx-auto">
        <div class="relative pl-8">
          {/* 全体を貫く縦線 */}
          <div
            class="absolute left-[5px] top-[4px] bottom-0 w-[2px] bg-purple-500 dark:bg-purple-400"
          >
          </div>

          {
            experiences.map((exp) => (
              <div class="relative pb-8 last:pb-0">
                {/* ドット */}
                <div class="absolute -left-8 top-[4px] w-3 h-3 rounded-full bg-purple-500 dark:bg-purple-400" />
                <p class="text-gray-600 dark:text-gray-400 mb-1">{exp.period}</p>
                <div class="pl-5 py-3 bg-white dark:bg-gray-800 shadow rounded border-2 border-gray-200 dark:border-gray-700 hover:border-purple-500 dark:hover:border-purple-400 transition-colors duration-200">
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
                    {exp.title}
                  </h3>
                  <p class="text-purple-500 dark:text-purple-400 mb-2">
                    {exp.company}
                  </p>
                  <p class="text-gray-700 dark:text-gray-300">
                    {exp.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</section>
