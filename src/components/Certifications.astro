---
const certifications = [
  {
    name: "ITパスポート試験",
    date: "2018年",
  },
  {
    name: "基本情報技術者試験",
    date: "2021年",
  },
];
---

<section id="certifications" class="min-h-screen py-20 bg-transparent">
  <div class="w-full">
    <h2
      class="text-3xl md:text-4xl font-bold mb-16 text-center text-gray-900 dark:text-white"
    >
      Certifications
    </h2>
    <div class="grid md:grid-cols-2 gap-6">
      {
        certifications.map((cert) => (
          <div class="bg-white dark:bg-transparent border-2 border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:border-purple-500 dark:hover:border-purple-400 transition-colors duration-200 shadow-sm">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
              {cert.name}
            </h3>
            <p class="text-sm text-purple-500 dark:text-purple-400">
              取得日: {cert.date}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
