---

<section id="skills" class="min-h-screen py-20 bg-transparent">
  <div class="w-full">
    <h2
      class="text-3xl md:text-4xl font-bold mb-16 text-center text-gray-900 dark:text-white"
    >
      Skills
    </h2>

    <div class="grid md:grid-cols-2 gap-6">
      {
        Object.entries(skillsByCategory).map(([category, skills]) => (
          <div class="mb-12 last:mb-0">
            <h3 class="text-2xl font-semibold mb-6 text-purple-500 dark:text-purple-400">
              {category}
            </h3>
            <div class="space-y-3">
              {skills.map((skill) => (
                <div class="bg-white dark:bg-transparent border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:border-purple-500 dark:hover:border-purple-400 transition-colors duration-200 flex flex-col h-full">
                  <div class="flex items-center justify-between mb-2">
                    <h4 class="text-lg font-semibold text-gray-900 dark:text-white">
                      {skill.name}
                    </h4>
                    <span class="inline-block px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 text-sm font-medium rounded-full whitespace-nowrap ml-2">
                      {skill.experience}
                    </span>
                  </div>
                  {skill.description && (
                    <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                      {skill.description}
                    </p>
                  )}
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
