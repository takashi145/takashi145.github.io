---
import Layout from "../layouts/Layout.astro";

const profile = {
  name: "takashi145",
  bio: `takashi145です。
プログラマーをやっています。
よろしくお願いします。`,
};

const personalInfo = [
  {
    label: "名前",
    value: "takashi145",
  },
  {
    label: "職業",
    value: "プログラマー",
  },
  {
    label: "所在地",
    value: "日本",
  },
  {
    label: "趣味",
    value: "映画鑑賞、散歩",
  },
];

const experiences = [
  {
    period: "2024 - 現在",
    title: "プログラマー",
    company: "Tech Company",
    description: "いろいろ",
  },
  {
    period: "2020 - 2023",
    title: "学生",
    company: "○○大学",
    description: "いろいろ",
  },
  {
    period: "2017 - 2020",
    title: "高校生",
    company: "△△高校",
    description: "いろいろ",
  },
];

const skillCategories = [
  {
    category: "Frontend",
    skills: ["React", "Vue.js", "TypeScript", "Tailwind CSS", "Astro"],
  },
  {
    category: "Backend",
    skills: ["Node.js", "Express", "PostgreSQL", "Firebase"],
  },
  {
    category: "Tools",
    skills: ["Git", "Docker", "Figma", "VS Code"],
  },
];
---

<Layout
  title="About - Portfolio"
  description="プロフィール、経歴、スキルについて"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 max-w-5xl">
    <!-- Profile Section -->
    <section class="mb-16">
      <h2 class="text-4xl font-bold mb-12 text-gray-900 dark:text-white">
        About Me
      </h2>
      <div class="grid md:grid-cols-5 gap-12">
        <div class="flex flex-col md:mt-8 gap-6 md:col-span-2">
          <div class="flex flex-row md:flex-col items-center gap-8">
            <img
              src="https://avatars.githubusercontent.com/u/84027833?s=400&u=2a47f99db63cdd16478f99daa60b84978ab44c85&v=4"
              alt="Profile"
              class="w-32 h-32 md:w-40 md:h-40 rounded-full border-4 border-purple-500 dark:border-purple-400 shadow-lg"
            />
            <div class="flex-1">
              <p
                class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed whitespace-pre-line"
              >
                {profile.bio}
              </p>
            </div>
          </div>
        </div>

        <div
          class="bg-white dark:bg-transparent border-2 border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:border-purple-500 dark:hover:border-purple-400 transition-colors duration-200 shadow-sm md:col-span-3"
        >
          <h2
            class="text-xl font-semibold mb-4 text-purple-500 dark:text-purple-400"
          >
            Personal Information
          </h2>
          <dl class="space-y-4">
            {
              personalInfo.map((info) => (
                <div class="border-b border-gray-200 dark:border-gray-700 last:border-b-0 pb-3 last:pb-0">
                  <dt class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">
                    {info.label}
                  </dt>
                  <dd class="text-base text-gray-900 dark:text-gray-200">
                    {info.value}
                  </dd>
                </div>
              ))
            }
          </dl>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">
        Skills
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        {
          skillCategories.map((category) => (
            <div class="bg-white dark:bg-transparent border-2 border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:border-purple-500 dark:hover:border-purple-400 transition-colors duration-200 shadow-sm">
              <h3 class="text-xl font-semibold mb-4 text-purple-500 dark:text-purple-400">
                {category.category}
              </h3>
              <div class="flex flex-wrap gap-2">
                {category.skills.map((skill) => (
                  <span class="px-3 py-1.5 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-300 text-sm rounded-md hover:bg-purple-100 dark:hover:bg-purple-900/30 hover:text-purple-600 dark:hover:text-purple-400 transition-colors duration-200">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Experience Section -->
    <section>
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">
        Experience
      </h2>
      <div class="relative pl-8">
        {/* 全体を貫く縦線 */}
        <div
          class="absolute left-[5px] top-[4px] bottom-0 w-[2px] bg-purple-500 dark:bg-purple-400"
        >
        </div>

        {
          experiences.map((exp) => (
            <div class="relative pb-8 last:pb-0">
              {/* ドット */}
              <div class="absolute -left-8 top-[4px] w-3 h-3 rounded-full bg-purple-500 dark:bg-purple-400" />
              <p class="text-gray-600 dark:text-gray-400 mb-1">{exp.period}</p>
              <div class="pl-5 py-3 bg-white dark:bg-gray-800 max-w-md shadow rounded border-2 border-gray-200 dark:border-gray-700 hover:border-purple-500 dark:hover:border-purple-400 transition-colors duration-200">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
                  {exp.title}
                </h3>
                <p class="text-purple-500 dark:text-purple-400 mb-2">
                  {exp.company}
                </p>
                <p class="text-gray-700 dark:text-gray-300">
                  {exp.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </section>
  </div>
</Layout>
